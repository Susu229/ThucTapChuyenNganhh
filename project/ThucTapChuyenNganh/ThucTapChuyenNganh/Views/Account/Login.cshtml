@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container-fluid page-header mb-5 position-relative overlay-bottom">
    <div class="d-flex flex-column align-items-center justify-content-center pt-0 pt-lg-5"
         style="min-height: 300px">
        <h1 class="display-4 mb-3 mt-0 text-white text-uppercase">Đăng Nhập</h1>
    </div>
</div>

<div class="container d-flex justify-content-center mt-4">
    <div class="card shadow-lg p-4" style="width: 420px; border-radius: 15px;">
        <h3 class="text-center mb-4">Đăng nhập tài khoản</h3>

        <form asp-action="Login" method="post">

            <div class="mb-3">
                <label class="fw-bold">Tài khoản</label>
                <input class="form-control" placeholder="Nhập tài khoản..." />
            </div>

            <div class="mb-3">
                <label class="fw-bold">Mật khẩu</label>
                <input type="password" class="form-control" placeholder="Nhập mật khẩu..." />
            </div>

            <button type="submit" class="btn btn-success w-100 py-2">
                Đăng nhập
            </button>

            <p class="mt-3 text-center">
                Chưa có tài khoản?
                <a href="/account/register" class="text-primary fw-bold">Đăng ký ngay</a>
            </p>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }
        </form>
    </div>
</div>
