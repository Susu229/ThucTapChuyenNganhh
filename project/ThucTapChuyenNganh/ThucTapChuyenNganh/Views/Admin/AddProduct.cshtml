@model ThucTapChuyenNganh.Models.Product

@{
    ViewData["Title"] = "Thêm Sản Phẩm";
}

<div class="container mt-4">

    <h1 class="mb-3 font-weight-bold text-dark">THÊM SẢN PHẨM MỚI</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <form asp-action="AddProduct" method="post">

        <div class="form-group mb-3">
            <label>Mã sản phẩm</label>
            <input type="text" class="form-control" name="Code" required />
        </div>

        <div class="form-group mb-3">
            <label>Tên sản phẩm</label>
            <input type="text" class="form-control" name="Name" required />
        </div>

        <div class="form-group mb-3">
            <label>Giá</label>
            <input type="number" class="form-control" name="Price" required />
        </div>

        <div class="form-group mb-3">
            <label>Trạng thái</label>
            <select class="form-control" name="Status">
                <option>Còn hàng</option>
                <option>Sắp hết</option>
                <option>Hết hàng</option>
            </select>
        </div>
        <div class="mt-3 d-flex">

            <button type="submit" class="btn btn-success btn-lg mr-3">
                <i class="fa fa-plus"></i> Thêm sản phẩm
            </button>

            <a asp-controller="Admin" asp-action="Products" class="btn btn-secondary btn-lg">
                <i class=" "></i> Quay lại
            </a>

        </div>

    </form>

</div>
