@model ThucTapChuyenNganh.Models.Product

<div class="container mt-4">

    <h1 class="text-primary mb-4">UPDATE SẢN PHẨM</h1>

    <div class="card shadow p-4">

        <form asp-action="EditProduct" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label fw-bold">Mã sản phẩm</label>
                <input asp-for="Code" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Tên sản phẩm</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Giá</label>
                <input type="number" class="form-control" name="Price" value="@Model.Price" required />
            </div>

            <div class="form-group mb-3">
                <label>Trạng thái</label>
                <select class="form-control" name="Status">
                    <option>Còn hàng</option>
                    <option>Sắp hết</option>
                    <option>Hết hàng</option>
                </select>
            </div>

            <div class="mt-3 d-flex gap-3">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fa fa-save"></i> Cập nhật
                </button>

                <a asp-controller="Admin" asp-action="Products" class="btn btn-secondary btn-lg">
                    <i class=""></i> Trở lại
                </a>
            </div>

        </form>

    </div>

</div>
