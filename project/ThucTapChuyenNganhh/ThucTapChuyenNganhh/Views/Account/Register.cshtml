@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container-fluid page-header mb-5 position-relative overlay-bottom">
    <div class="d-flex flex-column align-items-center justify-content-center pt-0 pt-lg-5"
         style="min-height: 300px">
        <h1 class="display-4 mb-3 mt-0 text-white text-uppercase">Đăng Ký</h1>
    </div>
</div>

<div class="container d-flex justify-content-center mt-4">
    <div class="card shadow-lg p-4" style="width: 450px; border-radius: 15px;">
        <h3 class="text-center mb-4">Tạo tài khoản mới</h3>

        <form asp-action="Register" method="post">

            <div class="mb-3">
                <label class="fw-bold">Họ tên</label>
                <input name="FullName" class="form-control" placeholder="Nhập họ tên..." />
            </div>

            <div class="mb-3">
                <label class="fw-bold">Email</label>
                <input name="Email" type="email" class="form-control" placeholder="Nhập email..." />
            </div>

            <div class="mb-3">
                <label class="fw-bold">Mật khẩu</label>
                <input name="Password" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
            </div>

            <div class="mb-3">
                <label class="fw-bold">Nhập lại mật khẩu</label>
                <input name="ConfirmPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu..." />
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2">
                Đăng ký
            </button>

            <p class="mt-3 text-center">
                Đã có tài khoản?
                <a href="/account/login" class="text-primary fw-bold">Đăng nhập ngay</a>
            </p>

            <p class="text-danger text-center">@ViewBag.Error</p>
        </form>
    </div>
</div>
