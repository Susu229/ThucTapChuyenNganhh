<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Koppee Admin - Sản phẩm</title>

    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/sb-admin.css" rel="stylesheet">

    <style>
        .table tbody tr:hover {
            background-color: #f9fafb;
        }

        .badge {
            font-size: 0.85rem;
            padding: 6px 10px;
            border-radius: 8px;
        }

        .btn-sm {
            padding: 5px 8px;
            border-radius: 6px;
        }

        .card {
            border-radius: 10px;
        }

        .form-section {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 25px;
        }
    </style>
</head>

<body class="fixed-nav sticky-footer bg-dark" id="page-top">
    <div class="content-wrapper">
        <div class="container-fluid">

            <h4 class="mb-3 font-weight-bold">Danh sách sản phẩm</h4>

            <!-- Form thêm sản phẩm -->
            <div class="form-section">
                <h5 class="text-primary mb-3"><i class="fa fa-plus"></i> Thêm sản phẩm mới</h5>
                <form asp-action="CreateProduct" method="post">
                    <div class="row">
                        <div class="col-md-3">
                            <label class="font-weight-bold">Mã sản phẩm</label>
                            <input name="Code" class="form-control" required />
                            @Html.ValidationMessage("Code", "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-3">
                            <label class="font-weight-bold">Tên sản phẩm</label>
                            <input name="Name" class="form-control" required />
                        </div>
                        <div class="col-md-3">
                            <label class="font-weight-bold">Giá</label>
                            <input name="Price" type="number" min="0" class="form-control" required />
                        </div>
                        <div class="col-md-3">
                            <label class="font-weight-bold">Trạng thái</label>
                            <select name="Status" class="form-select form-control">
                                <option value="Còn hàng">Còn hàng</option>
                                <option value="Sắp hết">Sắp hết</option>
                                <option value="Hết hàng">Hết hàng</option>
                            </select>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-check"></i> Lưu
                        </button>
                    </div>
                </form>
            </div>

            <!-- Thông báo -->
            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success">@ViewBag.Success</div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <!-- Bảng sản phẩm -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-white font-weight-bold text-primary">
                    <i class="fa fa-coffee"></i> Danh sách sản phẩm hiện có
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered text-center align-middle" id="dataTable" width="100%" cellspacing="0">
                            <thead class="thead-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Mã SP</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Trạng thái</th>
                                    <th>Sửa / Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Code</td>
                                        <td>@item.Name</td>
                                        <td>@item.Price.ToString("N0") đ</td>
                                        <td>
                                            @if (item.Status == "Còn hàng")
                                            {
                                                <span class="badge badge-success">Còn hàng</span>
                                            }
                                            else if (item.Status == "Sắp hết")
                                            {
                                                <span class="badge badge-warning text-dark">Sắp hết</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Hết hàng</span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-primary btn-edit" data-id="@item.Id">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger btn-delete"
                                                    data-id="@item.Id"
                                                    data-name="@item.Name"
                                                    data-price="@item.Price.ToString("N0")"
                                                    data-status="@item.Status">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="sticky-footer">
            <div class="container text-center">
                <small>© Koppee Coffee 2025</small>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            $(".btn-edit").click(function () {
                var id = $(this).data("id");
                $.get("/Admin/EditProduct/" + id, function (data) {
                    $("#editModal .modal-content").html(data);
                    $("#editModal").modal("show");
                });
            });

            $(".btn-delete").click(function () {
                var id = $(this).data("id");
                var name = $(this).data("name");
                var price = $(this).data("price");
                var status = $(this).data("status");

                var htmlText =
                    "<div style='font-size:16px; text-align:center; margin-top:10px;'>" +
                    "Bạn có chắc chắn muốn xóa sản phẩm <b style='color:#111;'>" + name + "</b>?" +
                    "<br><br><b>Mã sản phẩm (ID):</b> " + id +
                    "<br><b>Giá:</b> " + price + " đ" +
                    "<br><b>Trạng thái:</b> " + status +
                    "</div>";

                Swal.fire({
                    title: "Xác nhận xóa?",
                    html: htmlText,
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Xóa",
                    cancelButtonText: "Hủy"
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post("/Admin/DeleteProduct/" + id, function (res) {
                            if (res.success) {
                                Swal.fire("Đã xóa!", res.message, "success").then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire("Lỗi", res.message, "error");
                            }
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>
