@model ThucTapChuyenNganhh.Models.Product

<div class="modal-header bg-primary text-white">
    <h5 class="modal-title"><i class="fa fa-edit"></i> Sửa sản phẩm</h5>
    <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
</div>

<form asp-action="EditProduct" method="post">
    <div class="modal-body">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label>Mã sản phẩm</label>
            <input name="Code" value="@Model.Code" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Tên sản phẩm</label>
            <input name="Name" value="@Model.Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Giá</label>
            <input name="Price" type="number" min="0" value="@Model.Price" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Trạng thái</label>
            <select name="Status" class="form-control">
                <option value="Còn hàng" selected="@(Model.Status == "Còn hàng")">Còn hàng</option>
                <option value="Sắp hết" selected="@(Model.Status == "Sắp hết")">Sắp hết</option>
                <option value="Hết hàng" selected="@(Model.Status == "Hết hàng")">Hết hàng</option>
            </select>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Lưu</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
    </div>
</form>
