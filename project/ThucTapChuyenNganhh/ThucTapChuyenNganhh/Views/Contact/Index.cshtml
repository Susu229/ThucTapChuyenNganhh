@{
    ViewData["Title"] = "SUSU Coffee - Liên hệ";
}

<!-- Header -->
<div class="container-fluid page-header mb-5 position-relative overlay-bottom">
    <div class="d-flex flex-column align-items-center justify-content-center pt-0 pt-lg-5"
         style="min-height: 400px">

        <h1 class="display-4 mb-3 text-white text-uppercase">Liên hệ</h1>

        <div class="d-inline-flex mb-lg-5">

        </div>

    </div>
</div>

<style>
    .contact-box i {
        font-size: 35px;
        margin-bottom: 15px;
        color: var(--primary);
    }
</style>

<!-- Contact -->
<div class="container-fluid pt-5">
    <div class="container">

        <div class="section-title text-center mb-5">
            <h4 class="text-primary text-uppercase" style="letter-spacing: 5px;">LIÊN HỆ</h4>
            <h1 class="display-4 font-weight-bold">Kết nối với chúng tôi</h1>
        </div>

        <div class="row px-3 pb-4">

            <div class="col-sm-4 text-center mb-3 contact-box">
                <i class="fa fa-map-marker-alt"></i>
                <h4 class="font-weight-bold">Địa chỉ</h4>
                <p>180 Cao Lỗ, Quận 8, TP.HCM</p>
            </div>

            <div class="col-sm-4 text-center mb-3 contact-box">
                <i class="fa fa-phone-alt"></i>
                <h4 class="font-weight-bold">Điện thoại</h4>
                <p>+84 123 456 789</p>
            </div>

            <div class="col-sm-4 text-center mb-3 contact-box">
                <i class="far fa-envelope"></i>
                <h4 class="font-weight-bold">Email</h4>
                <p>susucoffee@gmail.com</p>
            </div>

        </div>

        <div class="row">

            <!-- Map -->
            <div class="col-md-6 pb-5">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.926458542027!2d106.67471677581327!3d10.740540059874882!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f187bd843e1%3A0x1a1b26c678b1c16c!2zMTgwIEPhuqd1IEzhu5UsIFBoxrDhu51uZyA0LCBRdeG6rW4gOCwgVGjhu5FuZyBwaOG7kSBHaeG7h3U!5e0!3m2!1sen!2s!4v1731547259473!5m2!1sen!2s"
                        width="100%"
                        height="443"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>

            </div>

            <!-- Form -->
            <div class="col-md-6 pb-5">
                <form asp-action="Submit" method="post">

                    <input class="form-control bg-transparent p-4 mb-3"
                           name="name" required placeholder="Tên của bạn" />

                    <input class="form-control bg-transparent p-4 mb-3"
                           name="email" required placeholder="Email" />

                    <input class="form-control bg-transparent p-4 mb-3"
                           name="subject" required placeholder="Chủ đề" />

                    <textarea class="form-control bg-transparent p-4 mb-4"
                              name="message"
                              rows="5" required placeholder="Nội dung"></textarea>

                    <button class="btn btn-primary font-weight-bold py-3 px-5" type="submit">
                        Gửi tin nhắn
                    </button>
                </form>
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                }
            </div>
        </div>
    </div>
