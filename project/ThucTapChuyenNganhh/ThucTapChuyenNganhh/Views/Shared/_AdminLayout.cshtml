<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Susu Admin</title>

    <link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/vendor/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/sb-admin.css" />

    <style>
        body {
            background: #f8fafc;
        }

        .sidebar {
            position: fixed;
            top: 56px;
            left: 0;
            width: 230px;
            height: calc(100vh - 56px);
            background: #ffffff;
            border-right: 1px solid #e5e7eb;
            padding-top: 10px;
        }

            .sidebar .nav-link {
                color: #555;
                padding: 12px 20px;
                font-size: 15px;
            }

                .sidebar .nav-link:hover {
                    background: #eef2ff;
                    color: #1e3a8a;
                }

        .content-area {
            margin-left: 230px;
            padding: 20px;
            padding-top: 80px;
        }

        footer {
            margin-top: 40px;
        }
    </style>
</head>

<body class="fixed-nav sticky-footer bg-light" id="page-top">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top" id="mainNav">
        <a class="navbar-brand font-weight-bold text-primary"
           asp-controller="Home" asp-action="Index">
            ☕ Susu Admin
        </a>

        <button class="navbar-toggler" type="button"
                data-toggle="collapse" data-target="#topNavbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="topNavbarContent">
            <ul class="navbar-nav ml-auto">

                <li class="nav-item">
                    <a class="nav-link"
                       asp-controller="Home" asp-action="Index">
                        <i class="fa fa-fw fa-home"></i> Trang Susu
                    </a>
                </li>

                <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                        <i class="fa fa-fw fa-sign-out"></i> Đăng xuất
                    </a>
                </li>

            </ul>
        </div>
    </nav>

    <!-- Sidebar -->
    <aside class="sidebar shadow-sm" id="sidebar">
        <ul class="nav flex-column">

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                    <i class="fa fa-fw fa-dashboard mr-2"></i> Trang chủ
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Products">
                    <i class="fa fa-fw fa-coffee mr-2"></i> Sản phẩm
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Orders">
                    <i class="fa fa-fw fa-shopping-cart mr-2"></i> Đơn hàng
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Customers">
                    <i class="fa fa-fw fa-users mr-2"></i> Khách hàng
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Reports">
                    <i class="fa fa-fw fa-bar-chart mr-2"></i> Báo cáo
                </a>
            </li>

        </ul>
    </aside>

    <!-- Content -->
    <div class="content-area" id="content-area">
        <div class="container-fluid">
            @RenderBody()
        </div>

        <footer class="sticky-footer">
            <div class="container text-center">
                <small>© Susu Coffee 2025</small>
            </div>
        </footer>
    </div>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
